    <div class="ad-banner shadow-sm">
        <script async="async" data-cfasync="false" src="//pl27401949.profitableratecpm.com/7138c1b8ed5f790a9060b3344f350bd1/invoke.js"></script> <div id="container-7138c1b8ed5f790a9060b3344f350bd1"></div>
    </div>

    <script>
        // HTML elements کو منتخب کرنا
        const duroodButton = document.getElementById('duroodButton');
        const counterDisplay = document.getElementById('counter');

        // Local storage سے گنتی شروع کرنا یا 0 سے
        let count = localStorage.getItem('duroodCount') ? parseInt(localStorage.getItem('duroodCount')) : 0;
        
        // گنتی کو ظاہر کرنے والا فنکشن
        function updateCounterDisplay() {
            counterDisplay.textContent = count.toLocaleString('ur-PK'); // اردو میں اعداد دکھانا
        }

        // صفحہ لوڈ ہونے پر گنتی دکھانا
        updateCounterDisplay();

        // درود بٹن پر کلک کرنے پر
        duroodButton.addEventListener('click', () => {
            // گنتی بڑھانا
            count++;
            
            // نئی گنتی کو local storage میں محفوظ کرنا
            localStorage.setItem('duroodCount', count);
            
            // گنتی کو اپڈیٹ کرنا
            updateCounterDisplay();
        });
    </script>
